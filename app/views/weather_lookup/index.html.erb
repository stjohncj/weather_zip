<h1>Lookup today's weather forecast for any zip code:</h1>
<%= form_with url: weather_lookup_index_path, method: :get, local: true do |form| %>
  <div class="form-group">
    <%= form.label :zip_code, "Zip Code" %>
    <%= form.text_field :zip_code, class: "form-control", placeholder: "Enter zip code", value: @zip_code %>
  </div>
  <div class="form-group">
    <%= form.submit "Get Weather", class: "btn btn-primary" %>
  </div>
<% end %>

<% if @weather_data %>
  <h2>Weather Forecast for <%= @zip_code %></h2>
  <div id="weather-info">
    <p>Current Temperature: <%= @weather_data[:temperature] %>Â°F</p>
    <p>Today's Temperature Low: <%= @weather_data[:temperature_min] %></p>
    <p>Today's Temperature High: <%= @weather_data[:temperature_max] %></p>
    <p>Last Updated: <%= @weather_data[:last_updated] %></p>
  </div>
<% end %>
